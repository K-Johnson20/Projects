while True:
    # Display options to user
    print("Please select operation:")
    print("1. Add")
    print("2. Subtract")
    print("3. Multiply")
    print("4. Divide")
    print("5. Quit")

    # Take user input
    choice = input("Enter choice (1/2/3/4/5): ")

    # Check if user wants to quit
    if choice == '5':
        break

    # Take inputs from user
    num1 = float(input("Enter first number: "))
    num2 = float(input("Enter second number: "))

    # Perform operations based on user choice
    if choice == '1':
        result = num1 + num2
        print("Result: ", result)
    elif choice == '2':
        result = num1 - num2
        print("Result: ", result)
    elif choice == '3':
        result = num1 * num2
        print("Result: ", result)
    elif choice == '4':
        result = num1 / num2
        print("Result: ", result)
    else:
        print("Invalid input")
